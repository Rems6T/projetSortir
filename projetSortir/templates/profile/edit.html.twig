{% extends 'base.html.twig' %}

{% block title %}Modifier Profile{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modifier {{ participant.pseudo }}</h1>
        <div class="row">
            <div class="col-2">
                <img src="{{ asset('uploads/brochures/'~participant.brochureFilename) }}"
                     alt="Photo de profil de {{ participant.brochureFilename }}" width="150"></div>
            <div class="col">
                {{ include('profile/_form.html.twig', {'button_label': 'Update'}) }}

            </div>
        </div>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_profile_index') }}">back to list</a>
    {% endif %}
    </div>
{% endblock %}
