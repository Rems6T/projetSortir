{% extends 'base.html.twig' %}

{% block title %}Annuler Sortie{% endblock %}

{% block body %}
    <div class="container-fluid pt-3">
        <div class="row justify-content-center text-center">
            <h2>Annuler une sortie</h2>
            <p>Nom de la sortie: {{ sortie.nom }}</p>
            <p>Date et heure de la sortie : {{ sortie.dateHeureDebut  |date('Y-m-d H:i:s') }}</p>
            <p>Campus : {{ sortie.siteOrganisateur.nom }}</p>
            <p>Lieu: {{ sortie.lieu.nom }} {{ sortie.lieu.rue }} {{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nom }}</p>
            <form action="" method="post">
                <label for="motif">Motif :</label>
                <input type="textArea" name="motif" id="motif">
                <button>Enregistrer</button>
            </form>
            <a href="{{ app.request.headers.get('referer') }}">
                <button>Retour</button>
            </a>
        </div>
    </div>

{% endblock %}