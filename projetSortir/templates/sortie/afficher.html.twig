{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}

    <section id="tableau_details">
        <table class="table">
            <tbody>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date et heure</th>
                <th>Date limite d'inscription</th>
                <th>Nombre de places</th>
                <th>Dur√©e</th>
                <th>Description</th>
                <th>Campus</th>
                <th>Lieu</th>
                <th>Rue</th>
                <th>Code postal</th>
            </tr>
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut  |date('Y-m-d H:i:s') }}</td>
                <td>{{ sortie.dateLimiteInscription |date('Y-m-d H:i:s') }}</td>
                <td>{{ sortie.participantsInscrits|length }} / {{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.duree }}</td>
                <td>{{ sortie.infosSortie }}</td>
                <td>{{ sortie.siteOrganisateur.nom }}</td>
                <td>{{ sortie.lieu.nom }}</td>
                <td>{{ sortie.lieu.rue }}</td>
                <td>{{ sortie.lieu.ville.codePostal }}</td>
            </tr>
            </tbody>
        </table>
    </section>

    <table>
        <tr>
            <th>Pseudo</th>
            <th>Nom</th>
        </tr>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.nom }}</td>
            </tr>
        {% endfor %}
    </table>
    {% if sortie.organisateur.id == app.user.id %}
        <a href="{{ path('app_sortie_modifier',{'id':sortie.id}) }}">Modifier</a>
    {% endif %}

{% endblock %}